generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// ---- Enums ----

enum ItemType {
  GAME
  ANIME
  BOOK
}

enum ItemStatus {
  BACKLOG
  IN_PROGRESS
  COMPLETED
  DROPPED
}

// ---- NextAuth Models ----

model User {
  id            String        @id @default(cuid())
  name          String?
  email         String?       @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  backlogItems  BacklogItem[]
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ---- App Models ----

model BacklogItem {
  id               String     @id @default(cuid())
  userId           String
  user             User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  type             ItemType
  title            String
  imageUrl         String?
  externalId       String?
  description      String?
  status           ItemStatus @default(BACKLOG)
  addedAt          DateTime   @default(now())
  startedAt        DateTime?
  completedAt      DateTime?
  // Game specific
  clearTimeMinutes Int?
  // Anime specific
  totalEpisodes    Int?
  currentEpisode   Int?
  // Book specific
  totalPages       Int?
  currentPage      Int?
  // Extra metadata (author, genre, etc.)
  metadata         Json?
  createdAt        DateTime   @default(now())
  updatedAt        DateTime   @updatedAt

  @@unique([userId, externalId, type])
  @@index([userId, type])
  @@index([userId, status])
}
